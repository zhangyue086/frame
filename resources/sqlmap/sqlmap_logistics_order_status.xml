<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="logisticsOrderStatusMapper">
	<resultMap type="com.zline.zlogistics.biz.dal.entity.OrderStatus" id="logisticsOrderStatusResult" >
	
		<id     property="logisticsOrderStatusId"	column="logistics_order_status_id"/>
		<result property="logisticsOrderId" 			column="logistics_order_id" />             					
		<result property="logisticsOrderStatusCode" 	column="logistics_order_status_code" />             								
		<result property="logisticsOrderStatusTime" 	column="logistics_order_status_time" />            									
		<result property="dmMobile" 					column="dm_mobile" /> 												
		<result property="dmName"						column="dm_name" />   						
		<result property="dmWorkNumber" 				column="dm_work_number" />   													
		<result property="dmLat" 						column="dm_lat" />  									
		<result property="dmLng" 						column="dm_lng" />  
		<result property="dateVersion" 					column="data_version" />
		
		<result property="isDeleted" 					column="is_deleted" />                                                 

		<result property="createId" 					column="create_id" />                                                 
		<result property="createTime" 					column="create_time" />                                                 
		<result property="lastUpdateTime" 				column="last_update_time" />                                                 
		<result property="lastUpdateId" 				column="last_update_id" />        
		                                         
	</resultMap>
	<sql id="selectHeader">
		SELECT
		`logistics_order_status`.`logistics_order_status_id`,                            
		`logistics_order_status`.`logistics_order_id`,                          
		`logistics_order_status`.`logistics_order_status_code`,                                
		`logistics_order_status`.`logistics_order_status_time`,                                   
		`logistics_order_status`.`dm_mobile`,                                   
		`logistics_order_status`.`dm_name`,                        
		`logistics_order_status`.`dm_work_number`,                                      
		`logistics_order_status`.`dm_lat`,                              
		`logistics_order_status`.`dm_lng`,                                               
		`logistics_order_status`.`data_version`,                                  
		`logistics_order_status`.`is_deleted`, 
		
		`logistics_order_status`.`create_time`,                                   
		`logistics_order_status`.`create_id`,                                     
		`logistics_order_status`.`last_update_time`,                              
		`logistics_order_status`.`last_update_id`

		FROM `zlogistics`.`logistics_order_status`
	
	</sql>
	
	<select id="queryStatusList" parameterType="java.lang.Long" resultMap="logisticsOrderStatusResult">
		<include refid="selectHeader" />
		<where>
			is_deleted = 0 
			AND logistics_order_id =#{id}
		</where>
		
		order by logistics_order_status_time asc
	</select>
	
		
</mapper>